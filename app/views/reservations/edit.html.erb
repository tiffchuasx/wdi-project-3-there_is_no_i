<h1>Edit Reservation</h1>
<%= link_to "Back to Restaurant", restaurant_path(@restaurant) %>
<%= form_for @reservation, url: restaurant_reservation_path(@restaurant, @reservation), html: {method: :put} do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: "Name" %>
  </p>
  <p>
    <%= f.label :phone %>
    <%= f.text_field :phone, placeholder: "Phone" %>
  </p>
  <p>
    <%= f.label :party_size %>
    <%= f.text_field :party_size, placeholder: "Party Size" %>
  </p>
  <p>
    <%= f.label :start_time %>
    <%= f.text_field :start_time, placeholder: "Date", value:@reservation.start_time.getlocal('+08:00') %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>

<% end %>
