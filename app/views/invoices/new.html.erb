<div class="row col-md-8 col-md-offset-2">

  <h1>Create a invoice on a programming topic</h1>
    <div class="well">
      <div class="invoice-form">
        <%= form_for @invoice do |f| %>
          <div class="input-group">
            <span class="input-group-addon">topic:</span>
            <%= f.text_field :restaurant_id, class: "form-control"%>
          </div>
          <%= f.submit class: "btn btn-primary", id: "create-invoice" %>
        <% end %>
      </div>
    </div>
</div>
