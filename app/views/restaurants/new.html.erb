<h1>Register Restaurant</h1>
<%= form_for @restaurant, url: restaurants_path(@restaurant), html: {method: :post} do |f| %>
  <%= f.label "name" %>
  <%= f.text_field :name, placeholder: "Name" %>
  <%= f.label "address 1" %>
  <%= f.text_field :address1, placeholder: "Address 1" %>
  <%= f.label "address 2" %>
  <%= f.text_field :address2, placeholder: "Address 2" %>
  <%= f.label "city" %>
  <%= f.text_field :address_city, placeholder: "City" %>
  <%= f.label "state" %>
  <%= f.text_field :address_state, placeholder: "State" %>
  <%= f.label "country" %>
  <%= f.text_field :address_country, placeholder: "Country" %>
  <%= f.label "postal" %>
  <%= f.text_field :address_postal, placeholder: "Postal Code" %>
  <%= f.label "email" %>
  <%= f.email_field :email, placeholder: "Email" %>
  <%= f.label "phone" %>
  <%= f.text_field :phone, placeholder: "Phone" %>
  <%= f.label "website" %>
  <%= f.text_field :website, placeholder: "Website" %>
  <%= f.label "description" %>
  <%= f.text_field :description, placeholder: "Description" %>
  <%= f.label "cuisine" %>
  <%= f.text_field :cuisine, placeholder: "Cuisine" %>
  <%= f.label "picture" %>
  <%= f.text_field :picture, placeholder: "Picture" %>
  <%= f.submit "Register" %>
<% end %>
