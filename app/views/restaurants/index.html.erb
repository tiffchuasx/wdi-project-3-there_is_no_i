<h1>Restaurants</h1>
<h1>Sort by:</h1>
<a class="waves-effect waves-light btn" href="/restaurants?name=sort">Name</a>
<a class="waves-effect waves-light btn" href="/restaurants?cuisine=sort">Cuisine</a>
<a class="waves-effect waves-light btn" href="/restaurants?city=sort">City</a>
<a class="waves-effect waves-light btn" href="/restaurants?rating=sort">Rating</a>

<% @restaurant.each do |restaurant| %>

<p>
  Name:
  <%= link_to restaurant.name, restaurant_path(restaurant) %>
</p>

<p>
  Address 1:
  <%= restaurant.address1 %>
</p>

<p>
  Address 2:
  <%= restaurant.address2 %>
</p>

<p>
  City:
  <%= restaurant.address_city %>
</p>

<p>
  State:
  <%= restaurant.address_state %>
</p>

<p>
  Country:
  <%= restaurant.address_country %>
</p>

<p>
  Post Code:
  <%= restaurant.address_postal %>
</p>

<p>
  Email:
  <a href="mailto:<%= restaurant.email %>"><%= restaurant.email %></a>
</p>

<p>
  Phone:
  <%= formatPhone(restaurant.phone) %>
</p>

<p>
  Website:
  <a href="<%= restaurant.website %>"><%= restaurant.website %></a>
</p>

<p>
  Description:
  <%= restaurant.description %>
</p>

<p>
  Cuisine:
  <%= restaurant.cuisine %>
</p>

<p>
  Picture:
  <%= restaurant.picture %>
</p>

<p>
  Rating:
  <%= restaurant.rating %>
</p>
<br>
<% end %>
