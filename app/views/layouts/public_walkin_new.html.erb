<!DOCTYPE html>
<html>
  <head>
    <title>Locavorus</title>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <h1><%= @restaurant.name%> Walk-in Queue</h1>
    <%= form_for @walkin, url: restaurant_public_path(@restaurant), html: {method: :post} do |f| %>
      <p>
        <%= f.label :party_size, "Number of Diners" %>
        <%= f.number_field :party_size, placeholder: "0", min: 1, max: 8, :required => true%>
      </p>

      <p>
        <%= f.label :phone, "Mobile" %>
        <%= f.text_field :phone, minlength: 8, maxlength: 8,  :required => true%>
      </p>

      <%= f.submit "Submit" %>
    <% end %>
    <p><%= flash[:alert] %></p>
  </body>
</html>
